<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoadingActivity">

    <include layout="@layout/tool_bar" />

    <Button
        android:id="@+id/loading_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show Loading 3 s"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar_view" />

    <Button
        android:id="@+id/loading_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count Down Timer 10 s"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading_btn" />

    <Button
        android:id="@+id/loading_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show loading not ui thread 3 s"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading_btn2" />

</androidx.constraintlayout.widget.ConstraintLayout>